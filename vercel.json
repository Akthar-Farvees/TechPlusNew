{
  "version": 2,
  "builds": [
    {
      "src": "index.ts",
      "use": "@vercel/node",
      "config": {
        "tsconfig": "tsconfig.json",
        "includeFiles": ["**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "index.ts"
    }
  ],
    "env": {
    "NODE_ENV": "production"
  },
    "functions": {
    "index.ts": {
      "maxDuration": 30
    }
  }
}
